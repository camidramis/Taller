#Clase 6: BILLAR ELIPTICO

#Metodo de newton
def metNewton(x0, func):
    if derivada(func,x0,0.0001)!=0:
        x1=x0-(func(x0)/derivada(func,x0,0.0001))
    return x1

metNewton(5,func2)
